@model Form
<h1>Enter Movies into the Collection</h1>

<form method="post">

    <label asp-for="Category">Category:</label>
    <input asp-for="Category" />
    <br />
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" />
    <br />
    <!--normalize-->
    <label asp-for="DirectorFirst">Director First Name:</label>
    <input asp-for="DirectorFirst" />
    <br />
    <label asp-for="DirectorLast">Director First Name:</label>
    <input asp-for="DirectorLast" />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" >
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Has this film been edited?</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="Lent">Lent To:</label>
    <input asp-for="Lent" />
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25" />
    <br />

    <button type="submit">Submit Form</button>
</form>